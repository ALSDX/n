{
  "name": "project-configs",
  "version": "1.0.0",
  "description": "Nuxt 3 project with linting and formatting",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:styles": "stylelint \"**/*.{vue,scss}\"",
    "format": "prettier --write .",
    "lint:fix": "npm run format && npm run lint:styles -- --fix && npm run lint -- --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "nuxt": "3.17.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.5.3",
    "stylelint": "^16.21.0",
    "stylelint-config-recess-order": "^7.1.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-config-standard-vue": "^1.0.0",
    "vue-eslint-parser": "^9.4.3"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{vue,scss}": "stylelint --fix",
    "*.{js,ts,vue,scss,md,json}": "prettier --write"
  }
}
